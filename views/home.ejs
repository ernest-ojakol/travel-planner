<%- include('partials/header') %>
    <section class="home">
        <div class="hero">
            <h1>Plan Your Perfect Trip</h1>
            <p>Discover destinations, check the weather, and map your journey with ease.</p>
            <% if (locals.error) { %>
                <p class="error">
                    <%= error %>
                </p>
                <% } %>
                    <form action="/plan-trip" method="POST" class="trip-form">
                        <div class="form-group">
                            <label for="start">Starting Point</label>
                            <input type="text" id="start" name="start" placeholder="Enter city or address" required>
                        </div>
                        <div class="form-group">
                            <label for="destination">Destination</label>
                            <input type="text" id="destination" name="destination" placeholder="Enter destination"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="dates">Travel Dates</label>
                            <input type="date" id="dates" name="dates" required>
                        </div>
                        <div class="form-group">
                            <label for="interests">Interests</label>
                            <select id="interests" name="interests">
                                <option value="">Select an interest</option>
                                <option value="adventure">Adventure</option>
                                <option value="culture">Culture</option>
                                <option value="relaxation">Relaxation</option>
                            </select>
                        </div>
                        <button type="submit" class="btn">Plan My Trip</button>
                    </form>
        </div>
        <div class="teaser-map">
            <div id="map" style="height: 300px;"></div>
        </div>
    </section>
    <script src="/js/home.js"></script>
    <script async
        src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&callback=initMap&libraries=places"></script>
    <%- include('partials/footer') %>